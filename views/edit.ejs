<% include ../views/partials/header %>
<div class="row">
    <div class="col-md-6">
        <form action="/todo/edit/<%= todo._id %>" method="post">
            <div class="form-group">
                <label>Todo Name</label>
                <input class="form-control" type="text" name="text" placeholder="Add Todo" value="<%= todo.text %>" />
            </div>
            <div class="form-group">
                <label>Todo Body</label>
                <textarea class="form-control" name="body" placeholder="Add Body" cols="30" rows="10"><%= todo.body %></textarea>
            </div>
            <br>
            <button class="btn btn-primary btn-block" type="submit">Edit Todo</button>
            <a class="btn btn-danger btn-block" href="/">Cancel</a>
        </form>
    </div>
</div>
<% include ../views/partials/footer %>