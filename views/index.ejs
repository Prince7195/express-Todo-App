<% include ../views/partials/header %>
<div class="row">
    <div class="col-md-6">
        <form action="/todo/add" method="post">
            <div class="form-group">
                <label>Todo Name</label>
                <input class="form-control" type="text" name="text" placeholder="Add Todo" />
            </div>
            <div class="form-group">
                <label>Todo Body</label>
                <textarea class="form-control" name="body" placeholder="Add Body" cols="30" rows="10"></textarea>
            </div>
            <br>
            <button class="btn btn-primary btn-block" type="submit">Add Todo</button>
        </form>
    </div>
    <div class="col-md-6">
        <ul class="list-group">
            <% todos.forEach(function(todo) { %>
                <li class="list-group-item">
                    <%= todo.text %> -
                        <%= todo.body %>
                            <a href="/todo/edit/<%= todo._id %>" class="edit-todo btn btn-default">Edit</a>
                            <a href="#" data-id='<%= todo._id %>' class="delete-todo btn btn-danger">x</a>
                </li>
                <% }) %>
        </ul>
    </div>
</div>
<% include ../views/partials/footer %>